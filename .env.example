# Example environment configuration file
# Copy this to .env and update with your actual values

# Directory to monitor for new files
DIRECTORY_PATH=./files

# Aidbox API configuration
AIDBOX_BASE_URL=https://api.aidbox.dev

# Authentication options (use either Basic auth OR Bearer token, not both)
# Option 1: Basic Authentication
AIDBOX_USERNAME=your_username_here
AIDBOX_PASSWORD=your_password_here

# Option 2: Bearer Token Authentication
# AIDBOX_AUTH_TOKEN=your_auth_token_here

# Logging configuration
LOG_FILE_PATH=file_processor.log

# File tracking
PROCESSED_FILES_PATH=processed_files.txt

# Scheduling (seconds)
SCHEDULE_INTERVAL=10